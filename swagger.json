        "summary" : "create a user",
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "type" : "object",
                "properties" : {
                  "firstName" : {
                    "type" : "string",
                    "example" : "Ben"
                  },
                  "lastName" : {
                    "type" : "string",
                    "example" : "Tsou"
                  }
                }
              }
            }
          }
        },
        "responses" : {
          "201" : {
            "description" : "user created"
          }
        }
      }
    },
    "/r1/user/{id}" : {
      "get" : {
        "tags" : [ "user" ],
        "summary" : "retrieve user information",
        "parameters" : [ {
          "in" : "path",
          "name" : "id",
          "description" : "user id",
          "schema" : {
            "type" : "string"
          },
          "required" : true
        }, {
          "in" : "header",
          "name" : "authroization",
          "description" : "user's JWT token",
          "schema" : {
            "type" : "string"
          },
          "required" : true
        } ],
        "responses" : {
          "200" : {
            "description" : "user information",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "object",
                  "properties" : {
                    "profile" : {
                      "type" : "object",
                      "$ref" : "#/components/schemas/profile"
                    },
                    "socialMedia" : {
